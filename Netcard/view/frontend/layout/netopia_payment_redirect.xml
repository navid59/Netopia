<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <title>Netopia Redirect</title>
    </head>
    <body>
        <referenceBlock name="page.main.title">
            <action method="setPageTitle">
                <argument translate="true" name="title" xsi:type="string">
                    You will redirect to Netopia Website
                </argument>
            </action>
        </referenceBlock>
        <referenceContainer name="content">
            <block class="Netopia\Netcard\Block\Redirect" name="redirect-Block" template="redirect.phtml"/>
        </referenceContainer>
    </body>
</page>
