<script>
require([
    'jquery',
    'prototype',
], function(jQuery){
    function self_validation() {
        console.log('self Validation - Start');
        params = {
        };

        new Ajax.Request('<?php echo $block->getAjaxUrl() ?>', {
            loaderArea:     false,
            asynchronous:   true,
            parameters:     params,
            onSuccess: function(transport) {
                response = JSON.parse(transport.responseText);
                // console.log(transport);
                var resultText = '';
                    if (transport.status > 200) {
                        resultText = transport.statusText;
                    } else {
                        resultText = response.msg;
                    }
                    jQuery('#selfvalidation_message').text(resultText);
            }
        });
        console.log(response);
        console.log('----------------------------------------');
        console.log('self Validation - End');
    }

    jQuery('#selfvalidation_button').click(function () {
        self_validation ();
    });
});
</script>
